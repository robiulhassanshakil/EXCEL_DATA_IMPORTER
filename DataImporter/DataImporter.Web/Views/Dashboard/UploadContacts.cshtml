@model AllGroupForContacts;
@{
    ViewData["Title"] = "UploadContacts";
}
<section class="pcoded-main-container">
    <div class="pcoded-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="page-header-title">
                            <h5 class="m-b-10">Upload Contacts</h5>
                        </div>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")"><i class="feather icon-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("ViewContactsStatus","Dashboard")">Contacts</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("UploadContacts","Dashboard")">Upload Contacts</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>File Upload</h5>
                    </div>
                    <div class="card-body">
                        <form method="post"  asp-action="PreviewExcelFile" asp-antiforgery="true" enctype="multipart/form-data">
                            <div class="row">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="">Groups</label>
                                    </div>
                                    <select required  asp-for="GroupId" id="Gp" asp-items="@(new SelectList(Model.Groups , "Id","Name"))"></select>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input"  id="inputFile" name="fileSelect">
                                        <label class="custom-file-label" for="inputFile" >Choose file</label>
                                    </div>
                                </div>
                            </div>
                            <button type='submit' class="btn btn-primary">Upload Now</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- [ Main Content ] end -->
        </div>
    </div>
</section>
@section Scripts
{    
    
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#Gp').select2({
                width: "18%", // need to override the changed default
            });
        });
        $('#inputFile').on('change',
            function() {
                //get the file name
                var fileName = $(this).val();
                //replace the "Choose a file" label
                $(this).next('.custom-file-label').html(fileName);
            });

    </script>
}
